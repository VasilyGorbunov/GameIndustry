@typeparam TItem

@if (ListOfItems is null)
{
    @if (NullList is not null)
    {
        @NullList
    }
    else
    {
        <img src="/images/ice.gif" height="200" />
    }
            
}
else if (ListOfItems.Count == 0)
{
    @if (EmptyList is not null)
    {
        @EmptyList
    }
    else
    {
        <img src="/images/nodata.jpg" height="200" />
    }
            
}
else
{
    @foreach (var item in ListOfItems)
    {
        @ItemTemplate(item)
    } 
}

@code {
    [Parameter]
    public RenderFragment NullList { get; set; }
    [Parameter]
    public RenderFragment EmptyList { get; set; }
    [Parameter]
    public RenderFragment<TItem> ItemTemplate { get; set; }
    [Parameter]
    public List<TItem> ListOfItems { get; set; }
}
